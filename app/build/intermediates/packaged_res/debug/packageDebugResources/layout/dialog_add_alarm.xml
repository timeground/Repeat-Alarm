<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repeat Days"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <CheckBox android:id="@+id/cbSun" android:text="S" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/cbMon" android:text="M" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/cbTue" android:text="T" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/cbWed" android:text="W" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/cbThu" android:text="T" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/cbFri" android:text="F" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/cbSat" android:text="S" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
